---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import OfficialSeal from '../../../components/ui/OfficialSeal.astro';
import Divider from '../../../components/ui/Divider.astro';
import Icon from '../../../components/ui/Icon.astro';
import { Content as DocContent } from '../../../../docs/votechain-assurance/08-operational-audit.md';
---

<BaseLayout
  title="VoteChain Assurance: Operational Audit"
  description="Internal operational audit playbook: keys, ceremonies, change control, incident response, evidence handling."
  ogType="article"
  article={{
    publishedTime: '2026-02-08',
    author: 'Absurdity Index',
    section: 'Policy',
    tags: ['votechain', 'assurance', 'operations', 'audit'],
  }}
>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-6">
      <div class="flex justify-center"><OfficialSeal size="56" /></div>
      <p class="text-xs text-gold-600 font-mono uppercase tracking-widest mt-3 mb-1">
        Assurance Playbook
      </p>
      <h1 class="font-serif text-2xl md:text-3xl text-navy-900 font-bold">Operational Audit</h1>
      <p class="text-navy-600 font-serif italic mt-2 text-sm">Internal pre-flight guide</p>
      <div class="mt-5 flex flex-wrap justify-center gap-2">
        <a
          href="/votechain/assurance"
          class="inline-flex items-center gap-2 rounded-md border border-navy-200 bg-white px-4 py-2 text-navy-800 font-sans text-sm font-semibold hover:border-gold-500 hover:shadow-sm transition-all"
        >
          <Icon name="clipboard-list" class="text-navy-700" size={18} />
          Assurance Index
        </a>
      </div>
    </div>

    <div class="gold-rule"></div>

    <Divider withSeal={true} />

    <div class="bg-parchment rounded-lg shadow-lg p-8 md:p-12">
      <div class="bill-content prd-content">
        <DocContent />
      </div>
    </div>
  </div>
</BaseLayout>

