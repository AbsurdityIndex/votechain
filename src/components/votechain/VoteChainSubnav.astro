---
import Icon from '../ui/Icon.astro';
import { VOTECHAIN_ASSURANCE_DOCS, VOTECHAIN_PRIMARY_NAV } from '../../utils/votechain-nav';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

function normalize(path: string) {
  return path.endsWith('/') && path !== '/' ? path.slice(0, -1) : path;
}

function isActive(href: string) {
  const p = normalize(currentPath);
  const h = normalize(href);
  if (h === '/votechain') return p === '/votechain';
  return p === h || p.startsWith(`${h}/`);
}

const inVoteChain = normalize(currentPath).startsWith('/votechain');
const inAssurance = normalize(currentPath).startsWith('/votechain/assurance');
if (!inVoteChain) {
  // This component is only meant for VoteChain routes. If accidentally used elsewhere,
  // render nothing rather than leaking styling assumptions into other pages.
  return null;
}

const activeDoc = inAssurance
  ? VOTECHAIN_ASSURANCE_DOCS.find((doc) => isActive(doc.href))
  : null;

---

<nav class="sticky z-40 border-b border-navy-200 bg-cream-50/90 backdrop-blur" aria-label="VoteChain" data-votechain-subnav style="top: var(--layout-sticky-top, 0px); margin-top: var(--layout-fund-bar-h, 0px);">
  {/* Primary Nav — tab-style with underline indicator */}
  <div class="max-w-7xl mx-auto px-3 sm:px-4 relative subnav-wrap">
    <div class="subnav-scroll flex -mb-px overflow-x-auto">
      {
        VOTECHAIN_PRIMARY_NAV.map((item) => {
          const active = isActive(item.href);
          return (
            <a
              href={item.href}
              aria-current={active ? 'page' : undefined}
              class:list={[
                'inline-flex items-center gap-1.5 px-3 py-3 text-[13px] font-semibold border-b-2 transition-all whitespace-nowrap',
                active
                  ? 'border-gold-500 text-navy-900'
                  : 'border-transparent text-navy-500 hover:text-navy-800 hover:border-navy-300',
              ]}
            >
              <Icon
                name={item.icon as any}
                size={16}
                class={active ? 'text-gold-600' : 'text-navy-400'}
              />
              {item.label}
            </a>
          );
        })
      }
    </div>
    <button class="subnav-arrow subnav-arrow-right" aria-label="Scroll right" tabindex="-1">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 5l7 7-7 7"/></svg>
    </button>
    <button class="subnav-arrow subnav-arrow-left" aria-label="Scroll left" tabindex="-1">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15 19l-7-7 7-7"/></svg>
    </button>
  </div>

  {/* Assurance Secondary Nav — collapsible on mobile, always visible on desktop */}
  {
    inAssurance && (
      <div class="border-t border-navy-100 bg-cream-50/60">
        <div class="max-w-7xl mx-auto px-3 sm:px-4 py-3">
          <details class="section-subnav">
            <summary class="flex items-center gap-1.5 text-xs font-medium text-navy-500 cursor-pointer list-none [&::-webkit-details-marker]:hidden select-none py-1">
              <Icon name="chevron-right" size={14} class="section-subnav-chevron transition-transform" />
              {activeDoc ? (
                <span>
                  <span class="font-semibold text-navy-700">{activeDoc.label}</span>
                  <span class="text-navy-400 mx-1">&middot;</span>
                  {VOTECHAIN_ASSURANCE_DOCS.length} playbooks
                </span>
              ) : (
                <span>{VOTECHAIN_ASSURANCE_DOCS.length} assurance playbooks</span>
              )}
            </summary>
            <div class="section-subnav-pills flex flex-wrap gap-1.5 pt-2">
              {VOTECHAIN_ASSURANCE_DOCS.map((doc) => {
                const active = isActive(doc.href);
                return (
                  <a
                    href={doc.href}
                    aria-current={active ? 'page' : undefined}
                    class:list={[
                      'inline-flex items-center gap-1.5 rounded-md px-2.5 py-1.5 text-xs font-medium transition-all',
                      active
                        ? 'bg-gold-500 text-navy-900 shadow-sm'
                        : 'bg-white text-navy-700 border border-navy-200 hover:border-gold-400 hover:bg-gold-50',
                    ]}
                    title={doc.description}
                  >
                    <Icon
                      name={doc.icon as any}
                      size={14}
                      class={active ? 'text-navy-800' : 'text-navy-500'}
                    />
                    {doc.label}
                  </a>
                );
              })}
            </div>
          </details>
        </div>
      </div>
    )
  }
</nav>

<script>
  // Publish subnav height as --layout-subnav-h so page content can stack below it.
  // The subnav reads --layout-sticky-top and --layout-fund-bar-h from CSS (set by
  // Header and FundTheIndex respectively) — no cross-component DOM queries needed.
  const subnav = document.querySelector('[data-votechain-subnav]') as HTMLElement | null;
  if (subnav) {
    const publishSubnavHeight = () => {
      document.documentElement.style.setProperty(
        '--layout-subnav-h',
        `${Math.ceil(subnav.getBoundingClientRect().height)}px`,
      );
    };
    new ResizeObserver(publishSubnavHeight).observe(subnav);
    publishSubnavHeight();
  }

  // Auto-scroll the active tab into view and manage fade indicators
  const scrollContainer = document.querySelector('.subnav-scroll') as HTMLElement | null;
  const wrap = document.querySelector('.subnav-wrap') as HTMLElement | null;
  if (scrollContainer && wrap) {
    const activeLink = scrollContainer.querySelector('[aria-current="page"]') as HTMLElement | null;
    if (activeLink) {
      activeLink.scrollIntoView({ inline: 'center', block: 'nearest', behavior: 'instant' });
    }

    function updateFades() {
      if (!scrollContainer || !wrap) return;
      const atStart = scrollContainer.scrollLeft <= 4;
      const atEnd = scrollContainer.scrollLeft + scrollContainer.clientWidth >= scrollContainer.scrollWidth - 4;
      wrap.classList.toggle('at-start', atStart);
      wrap.classList.toggle('at-end', atEnd);
    }

    scrollContainer.addEventListener('scroll', updateFades, { passive: true });
    updateFades();
    window.addEventListener('load', updateFades);

    // Arrow click handlers — scroll by 75% of visible width
    const arrowRight = wrap.querySelector('.subnav-arrow-right');
    const arrowLeft = wrap.querySelector('.subnav-arrow-left');
    const scrollAmount = () => Math.round(scrollContainer.clientWidth * 0.75);

    arrowRight?.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: scrollAmount(), behavior: 'smooth' });
    });
    arrowLeft?.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: -scrollAmount(), behavior: 'smooth' });
    });
  }

</script>

<style>
  /* Hide scrollbar on primary nav while keeping scroll functional */
  .subnav-scroll {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .subnav-scroll::-webkit-scrollbar {
    display: none;
  }

  /* Scroll arrow buttons on overflow edges */
  .subnav-arrow {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 2.5rem;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    color: var(--color-navy-500, #5a6a7a);
    transition: opacity 0.2s;
  }
  .subnav-arrow:hover {
    color: var(--color-navy-800, #1a2a3a);
  }
  .subnav-arrow-right {
    right: 0;
    padding-right: 4px;
    background: linear-gradient(to right, transparent 0%, var(--color-cream-50, #faf8f3) 40%);
  }
  .subnav-arrow-left {
    left: 0;
    padding-left: 4px;
    background: linear-gradient(to left, transparent 0%, var(--color-cream-50, #faf8f3) 40%);
  }
  .subnav-wrap.at-end .subnav-arrow-right {
    opacity: 0;
    pointer-events: none;
  }
  .subnav-wrap.at-start .subnav-arrow-left {
    opacity: 0;
    pointer-events: none;
  }

  /* Rotate chevron when open */
  .section-subnav[open] > summary .section-subnav-chevron {
    transform: rotate(90deg);
  }

  /* On md+ screens: hide summary, always show pills */
  @media (min-width: 768px) {
    .section-subnav > summary {
      display: none;
    }
    .section-subnav > .section-subnav-pills {
      display: flex !important;
      padding-top: 0;
    }
  }
</style>
