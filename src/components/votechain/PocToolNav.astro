---
/**
 * PocToolNav â€” compact sibling nav for the 3 "Go Deeper" POC tool pages.
 * Shows a back link to the POC hub + pills for Trust Portal, Node Monitor, Ballot Lookup.
 *
 * Props:
 *   current: 'trust' | 'monitor' | 'lookup'
 */
import Icon from '../ui/Icon.astro';

interface Props {
  current: 'trust' | 'monitor' | 'lookup';
}

const { current } = Astro.props;

const tools = [
  { id: 'trust', href: '/votechain/poc/trust', label: 'Trust Portal', icon: 'key' },
  { id: 'monitor', href: '/votechain/poc/monitor', label: 'Node Monitor', icon: 'activity' },
  { id: 'lookup', href: '/votechain/poc/lookup', label: 'Ballot Lookup', icon: 'search' },
] as const;
---

<div class="bg-gradient-to-r from-navy-50 to-cream-50 border-b border-navy-200">
  <div class="max-w-5xl mx-auto px-4 py-2.5">
    <div class="flex items-center gap-1.5">
      <a
        href="/votechain/poc"
        class="flex items-center gap-1 text-navy-500 hover:text-gold-600 transition-colors mr-2 shrink-0"
        title="Back to POC Overview"
      >
        <Icon name="arrow-left" class="text-current" size={14} />
        <span class="text-[10px] font-mono uppercase tracking-wider hidden sm:inline">POC</span>
      </a>

      <div class="flex items-center gap-1.5 flex-1 justify-center">
        {tools.map((tool) => (
          <a
            href={tool.href}
            class:list={[
              'inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold transition-all',
              tool.id === current
                ? 'bg-navy-800 text-gold-300 shadow-sm'
                : 'text-navy-500 hover:bg-navy-100 hover:text-navy-700',
            ]}
          >
            <Icon
              name={tool.icon as any}
              size={14}
              class={tool.id === current ? 'text-gold-400' : 'text-current'}
            />
            <span class="hidden sm:inline">{tool.label}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>
