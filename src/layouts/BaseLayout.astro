---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import ConstructionBanner from '../components/ui/ConstructionBanner.astro';
import SatireDisclaimerBanner from '../components/ui/SatireDisclaimerBanner.astro';
import FoundingDocsDrawer from '../components/ui/FoundingDocsDrawer.astro';
import AbsurdityIndexDrawer from '../components/ui/AbsurdityIndexDrawer.astro';
import LegislativeGlossaryDrawer from '../components/ui/LegislativeGlossaryDrawer.astro';
import FundTheIndex from '../components/ui/FundTheIndex.astro';
import SettingsDial from '../components/ui/SettingsDial.astro';
import VoteChainSubnav from '../components/votechain/VoteChainSubnav.astro';
import VoteChainPageSidebar from '../components/votechain/VoteChainPageSidebar.astro';
import PocFocusWizard from '../components/votechain/PocFocusWizard.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  robots?: string;
  pageType?: 'WebPage' | 'Article' | 'TechArticle' | 'FAQPage';
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
  faqSchema?: {
    question: string;
    answer: string;
  }[];
}

const {
  title,
  description = 'Real federal bills scored on an Absurdity Index, paired with satirical legislation that actually makes sense.',
  ogImage,
  ogType = 'website',
  robots = 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1',
  pageType: rawPageType,
  article,
  faqSchema,
} = Astro.props;

const pageType = rawPageType ?? (article ? 'Article' : 'WebPage');

const fullTitle = `${title} | Absurdity Index`;
const siteUrl = Astro.site?.origin ?? Astro.url.origin;
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
const resolvedOgImage = ogImage ? new URL(ogImage, siteUrl).href : `${siteUrl}/og-image.png`;

const ogImageType = (() => {
  const url = resolvedOgImage.toLowerCase().split('?')[0];
  if (url.endsWith('.png')) return 'image/png';
  if (url.endsWith('.jpg') || url.endsWith('.jpeg')) return 'image/jpeg';
  if (url.endsWith('.webp')) return 'image/webp';
  if (url.endsWith('.gif')) return 'image/gif';
  if (url.endsWith('.svg')) return 'image/svg+xml';
  return undefined;
})();

const escapeJsonText = (value: string) =>
  value
    .replace(/\s+/g, ' ')
    .replace(/\"/g, '"')
    .trim();

const websiteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Absurdity Index',
  url: siteUrl,
  description:
    'Real federal bills scored on an Absurdity Index, paired with satirical legislation that actually makes sense.',
  inLanguage: 'en-US',
  publisher: {
    '@type': 'Organization',
    name: 'Absurdity Index',
    url: siteUrl,
  },
  potentialAction: {
    '@type': 'SearchAction',
    target: `${siteUrl}/search/?q={search_term_string}`,
    'query-input': 'required name=search_term_string',
  },
};

const pageJsonLd = (() => {
  if (pageType === 'FAQPage') {
    return {
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: (faqSchema ?? []).map((entry) => ({
        '@type': 'Question',
        name: entry.question,
        acceptedAnswer: {
          '@type': 'Answer',
          text: escapeJsonText(entry.answer.replace(/<[^>]*>/g, ' ')),
        },
      })),
      name: fullTitle,
      url: canonicalUrl.href,
      inLanguage: 'en-US',
    };
  }

  const type = pageType === 'TechArticle' || pageType === 'Article' ? pageType : 'WebPage';

  if (type === 'WebPage') {
    return {
      '@context': 'https://schema.org',
      '@type': 'WebPage',
      name: fullTitle,
      description,
      url: canonicalUrl.href,
      inLanguage: 'en-US',
      datePublished: article?.publishedTime,
      dateModified: article?.modifiedTime || article?.publishedTime,
    };
  }

  return {
    '@context': 'https://schema.org',
    '@type': type,
    headline: fullTitle,
    description,
    datePublished: article?.publishedTime,
    dateModified: article?.modifiedTime || article?.publishedTime,
    author: {
      '@type': 'Organization',
      name: article?.author || 'Absurdity Index',
    },
    publisher: {
      '@type': 'Organization',
      name: 'Absurdity Index',
      url: siteUrl,
    },
    url: canonicalUrl.href,
    mainEntityOfPage: {
      '@type': 'WebPage',
      '@id': canonicalUrl.href,
    },
    inLanguage: 'en-US',
    image: [resolvedOgImage],
  };
})();

const jsonLd = [websiteJsonLd, pageJsonLd];

const pathname = Astro.url.pathname;
const isVoteChainRoute = pathname === '/votechain' || pathname.startsWith('/votechain/');

const isEvidenceBoard = pathname.startsWith('/votechain/evidence/');
const isPocRoute = pathname === '/votechain/poc' || pathname.startsWith('/votechain/poc/');
const showGlobalVoteChainSidebar = isVoteChainRoute && !isEvidenceBoard;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#F5F0E8" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#0A1628" media="(prefers-color-scheme: dark)" />
    <meta name="application-name" content="Absurdity Index" />
    <meta name="apple-mobile-web-app-title" content="Absurdity Index" />
    <script is:inline>
      (function () {
        var h = document.documentElement;

        // ── Theme ──
        var t = localStorage.getItem('theme');
        if (!t) t = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        h.setAttribute('data-theme', t);
        if (t === 'dark' || t === 'solarized-dark') h.classList.add('dark');

        // ── Font pairing ──
        var f = localStorage.getItem('font-pairing');
        if (f && f !== 'classic') {
          var pairings = {
            modern: {
              s: "'Space Grotesk','system-ui',sans-serif",
              a: "'DM Sans','system-ui','-apple-system',sans-serif",
              m: "'Fira Code','Consolas',monospace",
              u: 'https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400&family=Fira+Code:wght@400;700&display=swap',
            },
            elegant: {
              s: "'Playfair Display','Georgia',serif",
              a: "'Outfit','system-ui','-apple-system',sans-serif",
              m: "'Fira Code','Consolas',monospace",
              u: 'https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Outfit:wght@400;500;600;700&family=Fira+Code:wght@400;700&display=swap',
            },
            traditional: {
              s: "'IM Fell English','Georgia',serif",
              a: "'Manrope','system-ui','-apple-system',sans-serif",
              m: "'IBM Plex Mono','Consolas',monospace",
              u: 'https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&family=IBM+Plex+Mono:ital,wght@0,400;0,700;1,400&display=swap',
            },
            clean: {
              s: "'Merriweather','Georgia',serif",
              a: "'Plus Jakarta Sans','system-ui','-apple-system',sans-serif",
              m: "'JetBrains Mono','Fira Code','Consolas',monospace",
              u: 'https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,400;0,700;1,400&family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap',
            },
            accessible: {
              s: "'Atkinson Hyperlegible','system-ui',sans-serif",
              a: "'Atkinson Hyperlegible','system-ui','-apple-system',sans-serif",
              m: "'JetBrains Mono','Fira Code','Consolas',monospace",
              u: 'https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap',
            },
          };
          var p = pairings[f];
          if (p) {
            h.style.setProperty('--font-serif', p.s);
            h.style.setProperty('--font-sans', p.a);
            h.style.setProperty('--font-mono', p.m);
            var l = document.createElement('link');
            l.rel = 'stylesheet';
            l.href = p.u;
            l.setAttribute('data-font-pairing', f);
            document.head.appendChild(l);
          }
        }
      })();
    </script>
    <title>{fullTitle}</title>
    <meta name="description" content={description} />

    <!-- Robots -->
    <meta name="robots" content={robots} />

    <!-- Author/Publisher -->
    <meta name="author" content="Absurdity Index" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" sizes="48x48" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Font preconnect/preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IM+Fell+English:ital@0;1&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;700&family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&family=Pinyon+Script&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Absurdity Index" />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:image:secure_url" content={resolvedOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    {ogImageType && <meta property="og:image:type" content={ogImageType} />}
    <meta property="og:image:alt" content={fullTitle} />
    <meta property="og:locale" content="en_US" />
    {
      article?.publishedTime && (
        <meta property="article:published_time" content={article.publishedTime} />
      )
    }
    {
      article?.modifiedTime && (
        <meta property="article:modified_time" content={article.modifiedTime} />
      )
    }
    {article?.author && <meta property="article:author" content={article.author} />}
    {article?.section && <meta property="article:section" content={article.section} />}
    {article?.tags?.map((tag) => <meta property="article:tag" content={tag} />)}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={resolvedOgImage} />
    <meta name="twitter:image:alt" content={fullTitle} />

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Absurdity Index RSS Feed"
      href="/feed.xml"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    <meta name="generator" content={Astro.generator} />

    <!-- JSON-LD Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Microsoft Clarity (respects opt-out) -->
    <script is:inline>
      if (localStorage.getItem('analytics-opt-out') !== 'true') {
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "vfap3d6sbl");
      }
    </script>

    <slot name="head" />
  </head>
  <body class="bg-cream-100 text-navy-900 font-sans min-h-screen flex flex-col pb-10 sm:pb-9">
    {isPocRoute && (
      <script is:inline>
        (function () {
          var params = new URLSearchParams(window.location.search);
          if (params.has('focus') || sessionStorage.getItem('poc-focus') === '1') {
            document.documentElement.classList.add('poc-focus');
          }
        })();
      </script>
    )}
    {isPocRoute && (
      <button class="poc-focus-toggle" id="poc-focus-toggle" aria-label="Toggle focus mode">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"/></svg>
        <span id="poc-focus-label">Focus</span>
      </button>
    )}
    {isPocRoute && <PocFocusWizard />}
    <ConstructionBanner />
    <Header />
    <script is:inline>
      // Reset subnav height when navigating away from VoteChain routes
      // (the VoteChainSubnav component won't be present to set it).
      document.documentElement.style.setProperty('--layout-subnav-h', '0px');
    </script>
    <main class="flex-1">
      {isVoteChainRoute && !isEvidenceBoard && <VoteChainSubnav currentPath={pathname} />}
      {
        showGlobalVoteChainSidebar ? (
          <div class="xl:max-w-7xl xl:mx-auto xl:grid xl:grid-cols-[250px_minmax(0,1fr)] xl:gap-6 xl:px-4">
            <VoteChainPageSidebar currentPath={pathname} />
            <div class="min-w-0"><slot /></div>
          </div>
        ) : (
          <slot />
        )
      }
    </main>
    <Footer />
    <FoundingDocsDrawer />
    <AbsurdityIndexDrawer />
    <LegislativeGlossaryDrawer />
    <FundTheIndex />
    <SettingsDial />
    <SatireDisclaimerBanner />
    <button class="back-to-top" aria-label="Back to top" id="back-to-top">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 15l-6-6-6 6"/></svg>
    </button>
    <script is:inline>
      (function () {
        var btn = document.getElementById('back-to-top');
        if (!btn) return;
        var shown = false;
        window.addEventListener('scroll', function () {
          var shouldShow = window.scrollY > 400;
          if (shouldShow !== shown) {
            shown = shouldShow;
            btn.classList.toggle('visible', shown);
          }
        }, { passive: true });
        btn.addEventListener('click', function () {
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      })();
    </script>
    <script is:inline>
      (function () {
        var btn = document.getElementById('poc-focus-toggle');
        var label = document.getElementById('poc-focus-label');
        if (!btn) return;

        function isFocusOn() {
          return document.documentElement.classList.contains('poc-focus');
        }

        // Sync the URL bar with focus state (add/remove ?focus)
        function syncUrl(on) {
          var url = new URL(window.location);
          if (on && !url.searchParams.has('focus')) {
            url.searchParams.set('focus', '');
            history.replaceState(null, '', url);
          } else if (!on && url.searchParams.has('focus')) {
            url.searchParams.delete('focus');
            history.replaceState(null, '', url);
          }
        }

        function update() {
          var on = isFocusOn();
          if (label) label.textContent = on ? 'Exit Focus' : 'Focus';
          syncUrl(on);
        }

        update();

        btn.addEventListener('click', function () {
          document.documentElement.classList.toggle('poc-focus');
          var on = isFocusOn();
          sessionStorage.setItem('poc-focus', on ? '1' : '0');
          update();
        });

        // Rewrite POC links to carry ?focus when active
        document.addEventListener('click', function (e) {
          if (!isFocusOn()) return;
          var a = e.target.closest('a[href*="/votechain/poc"]');
          if (!a) return;
          var href = a.getAttribute('href');
          if (href && href.indexOf('focus') === -1) {
            a.setAttribute('href', href + (href.indexOf('?') === -1 ? '?focus' : '&focus'));
          }
        }, true);
      })();
    </script>
  </body>
</html>
